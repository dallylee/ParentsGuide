---
interface Props {
    tool: any;
}

const { tool } = Astro.props;
---

<section class="pb-24" data-worry-root>
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Worry Time</h1>
        <!-- Subtitle: ONLY visible in State 2 (Dashboard) -->
        <p class="text-slate-600 text-base mt-2 font-medium hidden" data-subtitle>Contain your worries to a specific time of day</p>
    </div>

    <!-- STATE 1: SETUP -->
    <!-- Rule: Show ONLY if settings are NOT confirmed -->
    <div class="hidden" data-state="setup">
        <div class="rounded-xl bg-white border border-black/5 shadow-soft p-5 lg:p-6 space-y-6">
            <div>
                <h2 class="text-xl font-bold text-gray-900 mb-2">Welcome to Worry Time</h2>
                <p class="text-slate-700 leading-relaxed">
                    Set your daily worry time to get started. This CBT technique helps reduce constant anxiety by giving worries a designated time slot.
                </p>
            </div>

            <div>
                <label class="block text-base font-semibold text-gray-900 mb-2">Daily worry time</label>
                <div class="relative">
                    <input type="time" class="w-full rounded-xl border-gray-200 p-4 text-lg font-medium text-gray-900 bg-gray-50 focus:bg-white focus:border-emerald-500 transition-colors shadow-sm" data-time-input />
                    <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-gray-400">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div>
                <label class="block text-base font-semibold text-gray-900 mb-2">Duration</label>
                <div class="grid grid-cols-4 gap-2" data-duration-buttons>
                    {[10, 15, 20, 30].map((min) => (
                        <button type="button" class="duration-chip" data-value={min}>{min} min</button>
                    ))}
                </div>
            </div>

            <button type="button" class="w-full btn-primary" data-save-setup>
                Start Using Worry Time
            </button>
        </div>

        <div class="mt-6 rounded-xl bg-white border border-black/5 shadow-soft overflow-hidden">
            <details class="group">
                <summary class="flex items-center justify-between p-4 cursor-pointer list-none bg-gray-50 hover:bg-gray-100 transition-colors">
                    <span class="font-semibold text-emerald-800">How this works</span>
                    <span class="text-emerald-600 transition-transform group-open:rotate-180">▼</span>
                </summary>
                <div class="p-5 border-t border-gray-100 text-slate-700 space-y-3 leading-relaxed">
                    <p>Worry Time helps you manage anxiety by postponing worries to a specific time later in the day.</p>
                    <p>When a worry pops up, write it down and tell yourself "I'll worry about this later". This helps you stay focused on the present moment.</p>
                </div>
            </details>
        </div>
    </div>

    <!-- STATE 2: DASHBOARD -->
    <!-- Rule: Show ONLY if settings ARE confirmed -->
    <div class="hidden space-y-6" data-state="dashboard">
        <!-- 1. Countdown Card -->
        <div class="rounded-xl bg-white border border-black/5 shadow-soft p-6 text-center space-y-1">
            <p class="text-slate-500 font-medium">Next worry time</p>
            <p class="text-4xl font-bold text-gray-900 tracking-tight" data-next-time-display>--:--</p>
            <p class="text-emerald-600 font-medium" data-countdown>in --h --m</p>
        </div>

        <!-- 2. Primary CTA -->
        <button type="button" class="w-full btn-primary flex items-center justify-center gap-2" data-open-add-worry>
            <span>+ Add a worry</span>
        </button>

        <!-- 3. Worry List -->
        <div>
            <div class="flex items-center justify-between mb-3 px-1">
                <h3 class="text-lg font-bold text-gray-900">Your Worry List</h3>
                <span class="text-slate-500 text-sm font-medium" data-list-count>0 items</span>
            </div>
            
            <div class="space-y-3" data-worry-list>
                <!-- Items injected here -->
            </div>
            
            <p class="hidden text-center text-slate-500 py-8 italic" data-empty-state>
                No worries listed yet. Enjoy your day!
            </p>
        </div>

        <!-- 4. Reassurance Helper Card -->
        <div class="rounded-xl border border-emerald-100 bg-emerald-50/50 p-4 relative pl-4 border-l-4 border-l-emerald-400">
            <p class="text-emerald-900 text-sm leading-relaxed">
                When worries pop up during the day, add them here instead of dwelling on them now. You'll address them at <span class="font-semibold" data-target-time-hint>--:--</span>.
            </p>
        </div>

        <!-- 5. Change settings link -->
        <button type="button" class="text-slate-500 font-medium text-sm flex items-center gap-2 hover:text-emerald-700 transition-colors" data-edit-settings>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Change settings
        </button>

        <!-- 6. Collapsible row: "How to use this tool" -->
        <div class="rounded-xl bg-white border border-black/5 shadow-soft overflow-hidden">
            <details class="group">
                <summary class="flex items-center justify-between p-4 cursor-pointer list-none bg-gray-50 hover:bg-gray-100 transition-colors">
                    <span class="font-semibold text-emerald-800">How to use this tool</span>
                    <span class="text-emerald-600 transition-transform group-open:rotate-180">▼</span>
                </summary>
                <div class="p-5 border-t border-gray-100 text-slate-700 space-y-3 leading-relaxed">
                    <p><strong>1. Write it down</strong><br/>Postpone the worry by adding it to your list.</p>
                    <p><strong>2. Refocus</strong><br/>Once written down, turn your attention back to the present moment.</p>
                    <p><strong>3. Review later</strong><br/>At your designated time, review the list. If it still bothers you, problem-solve it. If not, let it go.</p>
                </div>
            </details>
        </div>
    </div>

    <!-- ADD WORRY MODAL -->
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4 opacity-0 pointer-events-none transition-opacity duration-200" data-modal="add-worry">
        <div class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm transition-opacity" data-modal-backdrop></div>
        <div class="relative w-full max-w-md bg-white rounded-2xl shadow-xl p-6 transform scale-95 transition-all duration-200" data-modal-content>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Add a worry</h3>
            <textarea 
                class="w-full rounded-xl border-gray-200 p-4 text-base bg-gray-50 focus:bg-white focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 transition-all resize-none mb-4" 
                rows="3" 
                placeholder="What's on your mind?"
                data-worry-input
            ></textarea>
            <div class="flex gap-3 justify-end">
                <button type="button" class="px-5 py-2.5 rounded-lg font-bold text-slate-600 hover:bg-gray-100 transition-colors" data-modal-cancel>Cancel</button>
                <button type="button" class="px-5 py-2.5 rounded-lg font-bold text-white bg-emerald-500 hover:bg-emerald-600 shadow-md shadow-emerald-200 transition-all" data-modal-save>Save</button>
            </div>
        </div>
    </div>
</section>

<style>
    .btn-primary {
        @apply py-3.5 px-6 rounded-xl font-bold text-white bg-emerald-500 hover:bg-emerald-600 shadow-lg shadow-emerald-200/50 transition-all transform active:scale-[0.98];
    }

    .duration-chip {
        @apply py-2 px-1 rounded-lg font-bold text-sm bg-white border border-gray-200 text-slate-600 shadow-sm transition-all hover:border-emerald-300;
    }

    .duration-chip.selected {
        @apply bg-emerald-50 border-emerald-500 text-emerald-700 ring-1 ring-emerald-500;
    }

    [data-state]:not(.hidden) {
        animation: fadeIn 300ms ease-out forwards;
    }

    [data-modal].active {
        @apply opacity-100 pointer-events-auto;
    }

    [data-modal].active [data-modal-content] {
        @apply scale-100;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(4px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<script>
    // --- STORAGE KEYS ---
    const KEYS = {
        CONFIG: 'pg_worry_config_v2',
        LIST: 'pg_worry_list_v2'
    };

    // --- DOM REFERENCES ---
    const els = {
        root: document.querySelector('[data-worry-root]'),
        subtitle: document.querySelector('[data-subtitle]'),
        states: {
            setup: document.querySelector('[data-state="setup"]'),
            dashboard: document.querySelector('[data-state="dashboard"]')
        },
        setup: {
            timeInput: document.querySelector('[data-time-input]'),
            btns: document.querySelectorAll('[data-value]'),
            save: document.querySelector('[data-save-setup]')
        },
        dash: {
            nextTime: document.querySelector('[data-next-time-display]'),
            countdown: document.querySelector('[data-countdown]'),
            hintTime: document.querySelector('[data-target-time-hint]'),
            list: document.querySelector('[data-worry-list]'),
            count: document.querySelector('[data-list-count]'),
            empty: document.querySelector('[data-empty-state]'),
            addBtn: document.querySelector('[data-open-add-worry]'),
            editBtn: document.querySelector('[data-edit-settings]')
        },
        modal: {
            el: document.querySelector('[data-modal="add-worry"]'),
            input: document.querySelector('[data-worry-input]'),
            cancel: document.querySelector('[data-modal-cancel]'),
            save: document.querySelector('[data-modal-save]'),
            backdrop: document.querySelector('[data-modal-backdrop]')
        }
    };

    // --- STATE ---
    let config = {
        configured: false,
        time: '18:00',
        duration: 15
    };

    let worries = [];

    // --- PERSISTENCE ---
    const loadState = () => {
        try {
            const savedConfig = localStorage.getItem(KEYS.CONFIG);
            if (savedConfig) config = JSON.parse(savedConfig);

            const savedList = localStorage.getItem(KEYS.LIST);
            if (savedList) worries = JSON.parse(savedList);
        } catch (e) {
            console.error('Failed to load state', e);
        }
    };

    const saveConfig = () => {
        localStorage.setItem(KEYS.CONFIG, JSON.stringify(config));
    };

    const saveList = () => {
        localStorage.setItem(KEYS.LIST, JSON.stringify(worries));
    };

    // --- LOGIC ---
    const render = () => {
        // Toggle Views
        if (config.configured) {
            els.states.setup.classList.add('hidden');
            els.states.dashboard.classList.remove('hidden');
            if (els.subtitle) els.subtitle.classList.remove('hidden');
            renderDashboard();
        } else {
            els.states.setup.classList.remove('hidden');
            els.states.dashboard.classList.add('hidden');
            if (els.subtitle) els.subtitle.classList.add('hidden');
            renderSetup();
        }
    };

    const renderSetup = () => {
        if (els.setup.timeInput) els.setup.timeInput.value = config.time;
        els.setup.btns.forEach(btn => {
            const val = parseInt(btn.dataset.value);
            btn.classList.toggle('selected', val === config.duration);
        });
    };

    const renderDashboard = () => {
        // Update static time displays
        els.dash.nextTime.textContent = config.time;
        els.dash.hintTime.textContent = config.time;
        
        // Start countdown loop
        updateCountdown();
        
        // Render List
        renderList();
    };

    const renderList = () => {
        els.dash.list.innerHTML = '';
        els.dash.count.textContent = `${worries.length} items`;
        
        if (worries.length === 0) {
            els.dash.empty.classList.remove('hidden');
        } else {
            els.dash.empty.classList.add('hidden');
            worries.forEach(worry => {
                const item = document.createElement('div');
                // Use utility classes directly to avoid scoping issues
                item.className = 'worry-item flex items-start gap-3 p-4 bg-white border border-gray-100 rounded-xl shadow-sm transition-all duration-300';
                
                item.innerHTML = `
                    <label class="flex items-start gap-4 cursor-pointer w-full group select-none">
                        <input type="checkbox" class="sr-only worry-checkbox peer" data-id="${worry.id}">
                        
                        <!-- Custom Checkbox -->
                        <div class="relative mt-0.5 w-6 h-6 rounded-lg border-2 border-slate-300 bg-white flex items-center justify-center transition-all peer-checked:bg-emerald-500 peer-checked:border-emerald-500 peer-focus-visible:ring-2 peer-focus-visible:ring-emerald-200 shrink-0 group-hover:border-emerald-400">
                            <svg class="w-3.5 h-3.5 text-white opacity-0 transition-opacity peer-checked:opacity-100" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>

                        <span class="text-slate-800 font-medium leading-relaxed pt-0.5 group-hover:text-emerald-900 transition-colors peer-checked:text-slate-400 peer-checked:line-through">${escapeHtml(worry.text)}</span>
                    </label>
                `;
                els.dash.list.appendChild(item);
            });
        }
    };

    const updateCountdown = () => {
        const [targetH, targetM] = config.time.split(':').map(Number);
        
        const now = new Date();
        const target = new Date();
        target.setHours(targetH, targetM, 0, 0);

        if (target <= now) {
            // If time passed today, target tomorrow
            target.setDate(target.getDate() + 1);
        }

        const diff = target - now;
        const diffH = Math.floor(diff / (1000 * 60 * 60));
        const diffM = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        
        els.dash.countdown.textContent = `in ${diffH}h ${diffM}m`;
    };

    const escapeHtml = (unsafe) => {
        return unsafe
             .replace(/&/g, "&amp;")
             .replace(/</g, "&lt;")
             .replace(/>/g, "&gt;")
             .replace(/"/g, "&quot;")
             .replace(/'/g, "&#039;");
    };

    // --- ACTIONS ---
    const handleStart = () => {
        const timeVal = els.setup.timeInput.value;
        if (!timeVal) return alert('Please select a time');
        
        config.time = timeVal;
        config.configured = true;
        saveConfig();
        render();
    };

    const handleDurationSelect = (e) => {
        const btn = e.target.closest('button');
        if (!btn) return;
        config.duration = parseInt(btn.dataset.value);
        renderSetup();
    };

    const addWorry = () => {
        const text = els.modal.input.value.trim();
        if (!text) return;
        
        worries.unshift({
            id: Date.now().toString(36) + Math.random().toString(36).substr(2),
            text: text,
            createdAt: Date.now()
        });
        saveList();
        renderList();
        closeModal();
    };

    const handleCheckbox = (e) => {
        if (!e.target.matches('.worry-checkbox')) return;
        
        const id = e.target.dataset.id;
        const root = e.target.closest('.worry-item');
        
        // Add specific classes for fade out/slide up
        root.classList.add('opacity-0', '-translate-y-2', 'pointer-events-none');
        
        setTimeout(() => {
            worries = worries.filter(w => w.id !== id);
            saveList();
            renderList();
        }, 300);
    };

    const openModal = () => {
        els.modal.el.classList.add('active');
        els.modal.input.value = '';
        setTimeout(() => els.modal.input.focus(), 100);
    };

    const closeModal = () => {
        els.modal.el.classList.remove('active');
    };

    const editSettings = () => {
        config.configured = false;
        render();
    };

    // --- INIT ---
    const init = () => {
        if (!els.root) return; // Guard against SSR/missing component
        
        loadState();
        render();
        
        // Setup Events
        els.setup.save?.addEventListener('click', handleStart);
        els.setup.btns.forEach(btn => btn.addEventListener('click', handleDurationSelect));
        
        // Dashboard Events
        els.dash.addBtn?.addEventListener('click', openModal);
        els.dash.editBtn?.addEventListener('click', editSettings);
        els.dash.list?.addEventListener('change', handleCheckbox); // Event delegation for checkboxes

        // Modal Events
        els.modal.cancel?.addEventListener('click', closeModal);
        els.modal.backdrop?.addEventListener('click', closeModal);
        els.modal.save?.addEventListener('click', addWorry);
        els.modal.el?.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeModal();
            if (e.key === 'Enter' && (e.metaKey || e.ctrlKey)) addWorry();
        });

        // Interval
        setInterval(() => {
            if (config.configured) updateCountdown();
        }, 60000); // Check every minute
    };

    // Run init
    init();
</script>
