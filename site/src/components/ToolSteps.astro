---
interface Props {
    tool: any;
}
const { tool } = Astro.props;
const pastelColors = ['var(--pastel-1)', 'var(--pastel-2)', 'var(--pastel-3)', 'var(--pastel-4)'];
---

<div class="space-y-6 py-4">
    {tool.steps?.map((step, idx) => (
        <div
            class="pg-card pg-card-glow p-4 flex items-start"
            style={`--glow-colour: color-mix(in srgb, ${pastelColors[idx % pastelColors.length]} 70%, transparent)`}
        >
             <div class="w-8 h-8 rounded-full bg-pastel-3 flex-shrink-0 flex items-center justify-center font-bold text-green-800 mr-4">
                 {step.count || "â€¢"}
             </div>
             <div>
                 <p class="text-gray-800 font-medium text-lg">{step.action || step.text}</p>
             </div>
        </div>
    ))}

    {tool.instructions && (
        <div class="bg-yellow-50 p-6 rounded-xl border border-yellow-100">
             <h3 class="font-bold text-yellow-800 mb-2">Instructions</h3>
             <ul class="list-disc list-inside space-y-2 text-yellow-900">
                {Array.isArray(tool.instructions) ? tool.instructions.map(i => <li>{i}</li>) : <li>{tool.instructions}</li>}
             </ul>
        </div>
    )}
</div>
