---
import Layout from '../layouts/Layout.astro';
import siteIndex from '../../../content/index.json';

const home = siteIndex.home;
const base = import.meta.env.BASE_URL;
const hrefWithBase = (href) =>
    href.startsWith("/") ? `${base}${href.replace(/^\/+/, "")}` : href;
---
<Layout title="A Parent's Guide">
    <main class="min-h-[100svh] relative overflow-hidden">
        <img
            src={`${base}${home.hero_image.replace(/^\/+/, "")}`}
            alt="Calming background image"
            class="absolute inset-0 h-full w-full object-cover"
            loading="eager"
            decoding="async"
        />

        <div class="absolute inset-0 bg-gradient-to-b from-black/45 via-black/35 to-black/65"></div>

        <div class="relative z-10 min-h-[100svh] px-5 sm:px-8">
            <div class="min-h-[100svh] grid grid-rows-[auto_1fr_auto] pb-28 pt-10 sm:pt-14">
                <header class="max-w-xl mx-auto text-center">
                    <h1 class="text-white text-3xl sm:text-4xl font-semibold leading-tight hero-title">
                        {home.hero_title}
                    </h1>
                    <p class="mt-3 text-white/90 text-base sm:text-lg leading-relaxed">
                        {home.hero_subtitle}
                    </p>
                </header>

                <div aria-hidden="true"></div>

                <section class="max-w-2xl pb-6">
                    <p class="mt-0 text-white/90 text-base sm:text-lg leading-relaxed max-w-prose">
                        {home.hero_description ?? ""}
                    </p>
                </section>
            </div>
        </div>
    </main>
</Layout>

<style>
    .hero-title {
        opacity: 0;
        animation: heroFadeUp 1400ms ease-out forwards;
    }

    @keyframes heroFadeUp {
        from {
            opacity: 0;
            transform: translateY(14px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .hero-title {
            animation: none;
            opacity: 1;
        }
    }
</style>
