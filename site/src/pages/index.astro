---
import Layout from '../layouts/Layout.astro';
import HeroBackgroundIntro from '../components/HeroBackgroundIntro.astro';
import siteIndex from '../../../content/index.json';

const home = siteIndex.home;
const base = import.meta.env.BASE_URL;
const hrefWithBase = (href) =>
    href.startsWith("/") ? `${base}${href.replace(/^\/+/, "")}` : href;
const heroImgSrc = `${base}${home.hero_image.replace(/^\/+/, "")}`;
---
<Layout title="A Parent's Guide">
    <main class="min-h-[100svh] lg:min-h-0 relative overflow-hidden lg:overflow-visible bg-white lg:flex lg:flex-col">
        <div class="lg:hidden">
            <HeroBackgroundIntro
                imgSrc={heroImgSrc}
                typingTargets={[".hero-reveal-1", ".hero-reveal-2", ".hero-reveal-3"]}
            />
        </div>

        <div class="relative z-10 min-h-[100svh] px-5 sm:px-8 lg:order-1 lg:min-h-0">
            <div class="min-h-[100svh] grid grid-rows-[auto_1fr_auto] pb-28 pt-10 sm:pt-14 lg:min-h-0 lg:grid-rows-[auto_auto] lg:gap-6">
                <header class="w-full mx-auto text-center">
                    <h1 class="text-black text-3xl sm:text-4xl font-semibold leading-tight hero-reveal hero-reveal-1">
                        {home.hero_title}
                    </h1>
                    <p class="mt-3 text-black sm:text-xl leading-relaxed font-semibold hero-reveal hero-reveal-2" style={{ fontSize: '17px' }}>
                        {home.hero_subtitle}
                    </p>
                </header>

                <div aria-hidden="true" class="block lg:hidden"></div>

                <section class="w-full mx-auto pb-6 text-center">
                    <p class="mt-0 text-black text-base sm:text-lg leading-relaxed max-w-prose mx-auto font-semibold hero-reveal hero-reveal-3">
                        {home.hero_description ?? ""}
                    </p>
                </section>
            </div>
            <div class="hidden lg:block mt-10">
                <img src={heroImgSrc} alt="" class="w-full h-auto object-contain" />
            </div>
        </div>
    </main>
</Layout>

<style>
.hero-reveal {
  opacity: 0;
}

@keyframes heroReveal {
  0% { opacity: 0; transform: translateY(10px); }
  100% { opacity: 1; transform: translateY(0); }
}

@media (prefers-reduced-motion: no-preference) {
  .hero-reveal {
    animation: heroReveal 700ms ease-out forwards;
  }
  .hero-reveal-1 { animation-delay: 0ms; }
  .hero-reveal-2 { animation-delay: 220ms; }
  .hero-reveal-3 { animation-delay: 440ms; }
}

body.hero-intro-paused .hero-reveal {
  animation: none !important;
  opacity: 0;
  transform: translateY(6px);
  transition: opacity 840ms ease, transform 840ms ease;
}

.hero-reveal.is-on,
body.hero-intro-paused .hero-reveal.is-on {
  opacity: 1;
  transform: translateY(0);
}

@media (prefers-reduced-motion: reduce) {
  .hero-reveal {
    opacity: 1;
    transform: none;
    animation: none;
    transition: none !important;
  }
}

/* Ensure .is-on always wins against Astro-scoped opacity:0 rules */
:global(.hero-reveal.is-on) {
  opacity: 1 !important;
  transform: translateY(0) !important;
  animation: none !important;
}

:global(body.hero-intro-paused .hero-reveal.is-on) {
  opacity: 1 !important;
  transform: translateY(0) !important;
}
</style>
