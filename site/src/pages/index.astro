---
import Layout from '../layouts/Layout.astro';
import siteIndex from '../content/index.json';

const home = siteIndex.home;
const base = import.meta.env.BASE_URL;
const hrefWithBase = (href) =>
    href.startsWith("/") ? `${base}${href.replace(/^\/+/, "")}` : href;
---
<Layout title="A Parent's Guide">
    <main class="min-h-[100svh] relative overflow-hidden">
        <img
            src={`${base}${home.hero_image.replace(/^\/+/, "")}`}
            alt="Calming background image"
            class="absolute inset-0 h-full w-full object-cover"
            loading="eager"
            decoding="async"
        />

        <div class="absolute inset-0 bg-gradient-to-b from-black/45 via-black/35 to-black/65"></div>

        <div class="relative z-10 min-h-[100svh] flex items-end">
            <div class="w-full px-5 pb-10 sm:px-8 sm:pb-14">
                <div class="max-w-xl">
                    <h1 class="text-white text-3xl sm:text-4xl font-semibold leading-tight">
                        {home.hero_title}
                    </h1>
                    <p class="mt-3 text-white/90 text-base sm:text-lg leading-relaxed">
                        {home.hero_subtitle}
                    </p>
                    {home.hero_description && (
                        <p class="mt-4 text-white/85 text-sm sm:text-base leading-relaxed max-w-prose">
                            {home.hero_description}
                        </p>
                    )}

                    <div class="mt-7 flex flex-col gap-3 sm:flex-row sm:items-center">
                        <a
                            href={hrefWithBase(home.primary_cta.href)}
                            class="inline-flex items-center justify-center rounded-xl px-5 py-3 text-base font-medium bg-white text-slate-900 min-h-[44px]"
                        >
                            {home.primary_cta.label}
                        </a>

                        {home.secondary_ctas?.map((cta) => (
                            <a
                                href={hrefWithBase(cta.href)}
                                class="inline-flex items-center justify-center rounded-xl px-5 py-3 text-base font-medium border border-white/40 text-white hover:bg-white/10 min-h-[44px]"
                            >
                                {cta.label}
                            </a>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
