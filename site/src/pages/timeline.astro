---
import Layout from '../layouts/Layout.astro';
import siteIndex from '../../../content/index.json';
import { ArrowLeft } from 'lucide-astro';

const base = import.meta.env.BASE_URL;
const withBase = (path = "") => `${base}${path.replace(/^\/+/, "")}`;

const preferredSlugs = ['timeline', 'hospital-day', 'home-recovery', 'discharge'];
const sections = siteIndex.sections ?? [];

const preferredPhases = preferredSlugs
    .map((slug) => sections.find((section) => section.slug === slug))
    .filter(Boolean);

const fallbackPhases = sections.filter((section) => {
    const tags = section.tags?.map((tag) => tag.toLowerCase()) ?? [];
    const title = section.title?.toLowerCase() ?? '';
    return tags.includes('timeline') || title.includes('timeline') || title.includes('hospital');
});

const phases = preferredPhases.length > 0 ? preferredPhases : fallbackPhases;
const pastelColors = ['var(--pastel-1)', 'var(--pastel-2)', 'var(--pastel-3)', 'var(--pastel-4)'];
---

<Layout title="Timeline">
    <div class="sticky top-0 bg-white/90 backdrop-blur-md border-b border-gray-100 z-40 px-4 py-4 flex items-center">
        <a href={withBase('')} class="p-2 -ml-2 text-gray-600 hover:text-gray-900 transition-colors">
            <ArrowLeft size={24} />
        </a>
        <span class="ml-2 font-semibold text-gray-800">Timeline overview</span>
    </div>

    <div class="px-4 sm:px-6 py-6 space-y-6 pb-28">
        <header class="space-y-2">
            <h1 class="text-3xl font-semibold text-gray-900">Timeline</h1>
            <p class="text-gray-600 text-base">Quickly browse each phase before, during, and after hospital care.</p>
        </header>

        {phases.length === 0 ? (
            <div class="rounded-xl border border-dashed border-gray-200 bg-white px-4 py-10 text-center text-gray-600 shadow-soft">
                No timeline phases available yet.
            </div>
        ) : (
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                {phases.map((phase, index) => {
                    const imagePath = phase.hero_image ? withBase(phase.hero_image) : null;
                    const glow = `${pastelColors[index % pastelColors.length]}80`;
                    const buttonColor = pastelColors[(index + 1) % pastelColors.length];

                    return (
                        <a
                            href={withBase(`section/${phase.slug}/`)}
                            class="group block rounded-xl border border-black/5 bg-white p-5 sm:p-6 shadow-soft shadow-glow focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-offset-white focus-visible:ring-sky-400 transition transform hover:-translate-y-0.5"
                            style={`--glow: ${glow}`}
                        >
                            <div class="flex items-start gap-4">
                                {imagePath && (
                                    <img
                                        src={imagePath}
                                        alt=""
                                        class="h-14 w-14 rounded-lg object-cover border border-gray-100"
                                        loading="lazy"
                                        decoding="async"
                                    />
                                )}
                                <div class="flex-1 space-y-2">
                                    <div class="flex items-center justify-between gap-2">
                                        <h2 class="text-xl font-semibold text-gray-900 leading-tight">{phase.title}</h2>
                                        {phase.tags?.length > 0 && (
                                            <span class="text-xs px-2 py-1 rounded-full bg-gray-100 text-gray-700 border border-gray-200">
                                                {phase.tags[0]}
                                            </span>
                                        )}
                                    </div>
                                    <p class="text-gray-600 text-sm leading-relaxed">{phase.summary}</p>
                                    <div class="flex items-center justify-between pt-2">
                                        <span class="text-sm font-medium text-gray-700">{phase.est_read} min read</span>
                                        <span
                                            class="inline-flex items-center rounded-full px-4 py-2 text-sm font-semibold text-gray-900 shadow-soft"
                                            style={`background-color: ${buttonColor}`}
                                        >
                                            Open
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    );
                })}
            </div>
        )}
    </div>
</Layout>
