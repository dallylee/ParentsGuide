---
import BottomNav from '../components/BottomNav.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const base = import.meta.env.BASE_URL;
const withBase = (path = "") => `${base}${path.replace(/^\/+/, "")}`;

const {
  title,
  description = "A parent's guide for supporting a child through surgery.",
  image = "/images/hero.jpg",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>

    <meta name="description" content={description} />

    <!-- Basic social previews -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={withBase(image)} />
    <meta property="og:type" content="website" />

    <!-- PWA-ish hints -->
    <meta name="theme-color" content="#ffffff" />
    <link rel="manifest" href={withBase("manifest.webmanifest")} />
    <link rel="icon" href={withBase("favicon.svg")} />
  </head>

  <body class="min-h-screen bg-bg pb-28 text-slate-800 font-medium overflow-x-hidden">
    <main
      class="max-w-2xl w-full mx-auto min-h-screen bg-bg shadow-2xl shadow-gray-200/50 relative px-4 sm:px-6 overflow-x-hidden"
    >
      <slot />
      <BottomNav />
    </main>

    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          const swUrl = `${import.meta.env.BASE_URL}sw.js`;
          navigator.serviceWorker
            .register(swUrl, { scope: import.meta.env.BASE_URL })
            .catch(() => {});
        });
      }
    </script>
  </body>
</html>
