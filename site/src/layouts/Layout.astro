---
import BottomNav from '../components/BottomNav.astro';
import '../styles/global.css';
import InstallPrompt from '../components/InstallPrompt.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const base = import.meta.env.BASE_URL;
const withBase = (path = "") => `${base}${path.replace(/^\//, "")}`;

const {
  title,
  description = "A parent's guide for supporting a child through surgery.",
  image = "/images/hero.jpg"
} = Astro.props;

const resolvedImagePath = image.startsWith("http") ? image : withBase(image);
const ogImage = Astro.site
  ? new URL(resolvedImagePath, Astro.site).toString()
  : resolvedImagePath;

const stripTrailingSlash = (path = "") => path.replace(/\/+$/, "");
const currentPath = stripTrailingSlash(Astro.url.pathname);
const homePath = stripTrailingSlash(withBase("/"));

const navItems = [
  { href: withBase("/"), label: "Home" },
  { href: withBase("section/start/"), label: "Your guide" },
  { href: withBase("tools/"), label: "Tools" },
  { href: withBase("section/timeline/"), label: "Timeline" },
  { href: withBase("notes/"), label: "Notes" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={withBase('favicon.svg')} />

    <!-- PWA Manifest (mobile only) -->
    <script is:inline>
      const isMobile = /Android|iPhone|iPad|iPod/i.test(navigator.userAgent);
      if (isMobile) {
        const link = document.createElement('link');
        link.rel = 'manifest';
        link.href = '${withBase("manifest.webmanifest")}';
        document.head.appendChild(link);
      }
    </script>

    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;1,400&family=Lato:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>

  <body
    class:list={[
      "min-h-screen bg-bg pb-28 text-slate-800 font-medium overflow-x-hidden",
      { "pg-soft-bg": Astro.url.pathname.replace(/\/$/, "") !== import.meta.env.BASE_URL.replace(/\/$/, "") }
    ]}
  >
    <main class="flex-1 px-4 sm:px-6 lg:px-8 py-4 sm:py-6">
      <div class="w-full mx-auto max-w-xl sm:max-w-2xl lg:max-w-3xl xl:max-w-4xl min-h-screen bg-bg shadow-2xl shadow-gray-200/50 relative overflow-x-hidden">
        <nav aria-label="Primary" class="hidden lg:flex items-center justify-center gap-6 border-b border-gray-100 bg-white/90 px-6 py-4 text-sm font-semibold text-slate-700">
          {navItems.map(({ href, label }) => {
            const hrefPath = stripTrailingSlash(href);
            const isActive = currentPath === hrefPath || (hrefPath !== homePath && currentPath.startsWith(hrefPath));
            return (
              <a
                href={href}
                class:list={[
                  "transition-colors",
                  isActive ? "text-slate-900" : "text-slate-600 hover:text-slate-900"
                ]}
              >
                {label}
              </a>
            );
          })}
        </nav>
        <slot />
        <BottomNav />
        <InstallPrompt />
      </div>
    </main>
    <script>
      const isMobile = /Android|iPhone|iPad|iPod/i.test(navigator.userAgent);
      if (isMobile && 'serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          const swUrl = `${import.meta.env.BASE_URL}sw.js`;
          navigator.serviceWorker
            .register(swUrl, { scope: import.meta.env.BASE_URL })
            .catch((error) => {
              console.error('Service worker registration failed:', error);
            });
        });
      }
    </script>
  </body>
</html>
