import React, { useState, useEffect } from 'react';
import { Check, ArrowLeft } from 'lucide-react';

export default function GroundingExercise() {
  const [started, setStarted] = useState(false);
  const [currentStep, setCurrentStep] = useState(0);
  const [completed, setCompleted] = useState([]);
  const [showComplete, setShowComplete] = useState(false);

  const steps = [
    { count: 5, text: "Acknowledge 5 things you can see around you.", color: "bg-emerald-200" },
    { count: 4, text: "Acknowledge 4 things you can touch or feel.", color: "bg-emerald-200" },
    { count: 3, text: "Acknowledge 3 things you can hear.", color: "bg-emerald-200" },
    { count: 2, text: "Acknowledge 2 things you can smell.", color: "bg-emerald-200" },
    { count: 1, text: "Acknowledge 1 thing you can taste.", color: "bg-emerald-200" }
  ];

  useEffect(() => {
    if (showComplete) {
      const timer = setTimeout(() => {
        setShowComplete(false);
      }, 5000);
      return () => clearTimeout(timer);
    }
  }, [showComplete]);

  const handleStart = () => {
    setStarted(true);
    setCurrentStep(0);
    setCompleted([]);
    setShowComplete(false);
  };

  const handleStepComplete = (index) => {
    if (index === currentStep && !completed.includes(index)) {
      setCompleted([...completed, index]);
      if (index === steps.length - 1) {
        setShowComplete(true);
        setStarted(false);
      } else {
        setCurrentStep(index + 1);
      }
    }
  };

  const handleDismissComplete = () => {
    setShowComplete(false);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-teal-50 to-emerald-50 flex flex-col">
      {/* Header */}
      <div className="p-4 pb-2">
        <button className="flex items-center text-teal-700 hover:text-teal-900 mb-3">
          <ArrowLeft size={20} className="mr-1" /> Back
        </button>
        <h1 className="text-xl font-bold text-teal-900">5-4-3-2-1 Grounding</h1>
      </div>

      {/* Scrollable Content */}
      <div className="flex-1 overflow-y-auto px-4 pb-20">
        {/* Instructions */}
        <div className="bg-white rounded-lg p-4 mb-4 shadow-sm">
          <h2 className="text-lg font-semibold text-teal-900 mb-3">Engage your senses</h2>
          <p className="text-sm text-gray-700 mb-3">
            This evidence-informed, commonly used exercise gently guides you through your senses. When you finish each step, tap the bar to move to the next.
          </p>
          
          <div className="bg-teal-50 rounded-lg p-3">
            <h3 className="font-semibold text-sm text-teal-900 mb-2">Quick how-to</h3>
            <ul className="space-y-1 text-xs text-gray-700">
              <li>• Select how many cycles you want to run below.</li>
              <li>• Start begins the sequence, Pause holds the timer, Restart resets everything.</li>
              <li>• Breathe in through your nose and out slowly through your mouth.</li>
            </ul>
          </div>
        </div>

        {/* Start/Restart Button */}
        {!started && !showComplete && (
          <button
            onClick={handleStart}
            className="w-full bg-teal-600 hover:bg-teal-700 text-white font-semibold py-4 px-6 rounded-lg mb-4 transition-colors shadow-md text-base"
          >
            {completed.length === 0 ? 'Start' : 'Restart'}
          </button>
        )}

        {/* Progress Indicator */}
        {started && (
          <div className="mb-4">
            <p className="text-teal-700 font-medium mb-2 text-sm">Step {currentStep + 1} of 5</p>
            <div className="flex gap-2">
              {steps.map((_, index) => (
                <div
                  key={index}
                  className={`h-2 flex-1 rounded-full transition-colors ${
                    completed.includes(index) ? 'bg-teal-500' : 'bg-teal-200'
                  }`}
                />
              ))}
            </div>
          </div>
        )}

        {/* Steps */}
        <div className="space-y-3 pb-4">
          {steps.map((step, index) => {
            const isActive = started && currentStep === index;
            const isCompleted = completed.includes(index);
            
            return (
              <div
                key={index}
                onClick={() => handleStepComplete(index)}
                className={`bg-white rounded-lg p-4 shadow-sm transition-all ${
                  isActive ? 'cursor-pointer ring-2 ring-teal-500' : ''
                } ${isCompleted ? 'opacity-60' : ''}`}
              >
                <div className="flex items-start gap-3">
                  <div
                    className={`flex-shrink-0 w-14 h-14 rounded-full flex items-center justify-center font-bold text-xl transition-all ${
                      isCompleted 
                        ? 'bg-teal-500 text-white' 
                        : step.color + ' text-teal-900'
                    } ${
                      isActive ? 'animate-pulse-scale' : ''
                    }`}
                  >
                    {isCompleted ? <Check size={28} /> : step.count}
                  </div>
                  <div className="flex-1 min-w-0">
                    <h3 className="text-base font-semibold text-gray-900 mb-1">
                      {step.text}
                    </h3>
                    <p className="text-gray-600 text-xs">
                      {isActive ? 'Tap to complete this step and follow the glow to the next.' : 
                       isCompleted ? '✓ Completed' : 
                       'Wait for your turn'}
                    </p>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>

      {/* Complete Overlay */}
      {showComplete && (
        <div className="fixed inset-0 flex items-center justify-center z-50 px-4 pointer-events-none">
          <div 
            onClick={handleDismissComplete}
            className="pointer-events-auto bg-gradient-to-r from-teal-500 to-emerald-500 text-white rounded-2xl shadow-2xl p-8 max-w-sm w-full cursor-pointer animate-pop-in transform"
          >
            <h2 className="text-3xl font-bold mb-3 text-center">Complete — breathe easy</h2>
            <p className="text-teal-50 text-center text-sm">Tap to dismiss and return to the steps.</p>
          </div>
        </div>
      )}

      {/* Bottom Navigation */}
      <div className="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 py-2 safe-area-bottom">
        <div className="flex justify-around px-2">
          <button className="flex flex-col items-center text-teal-600 py-1">
            <svg className="w-6 h-6 mb-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
            <span className="text-xs">Home</span>
          </button>
          <button className="flex flex-col items-center text-gray-400 py-1">
            <svg className="w-6 h-6 mb-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
            </svg>
            <span className="text-xs">Your guide</span>
          </button>
          <button className="flex flex-col items-center text-gray-400 py-1">
            <svg className="w-6 h-6 mb-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fillRule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z" clipRule="evenodd" />
            </svg>
            <span className="text-xs">Tools</span>
          </button>
          <button className="flex flex-col items-center text-gray-400 py-1">
            <svg className="w-6 h-6 mb-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fillRule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clipRule="evenodd" />
            </svg>
            <span className="text-xs">Timeline</span>
          </button>
          <button className="flex flex-col items-center text-gray-400 py-1">
            <svg className="w-6 h-6 mb-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fillRule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clipRule="evenodd" />
            </svg>
            <span className="text-xs">Notes</span>
          </button>
        </div>
      </div>

      <style jsx>{`
        @keyframes pulse-scale {
          0%, 100% {
            transform: scale(1);
            background-color: rgb(167, 243, 208);
          }
          25% {
            transform: scale(1.15);
            background-color: rgb(254, 202, 202);
          }
          50% {
            transform: scale(1);
            background-color: rgb(254, 202, 202);
          }
          75% {
            transform: scale(1.15);
            background-color: rgb(167, 243, 208);
          }
        }

        @keyframes pop-in {
          0% {
            opacity: 0;
            transform: scale(0.8);
          }
          50% {
            transform: scale(1.05);
          }
          100% {
            opacity: 1;
            transform: scale(1);
          }
        }

        .animate-pulse-scale {
          animation: pulse-scale 2s ease-in-out infinite;
        }

        .animate-pop-in {
          animation: pop-in 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        .safe-area-bottom {
          padding-bottom: env(safe-area-inset-bottom);
        }
      `}</style>
    </div>
  );
}
